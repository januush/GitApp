<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                   android:orientation="vertical"
                                   android:layout_width="match_parent"
                                   android:layout_height="100dp"
                                   android:layout_marginTop="10dp"
                                   android:layout_marginRight="10dp"
                                   android:clickable="true"
                                   android:focusable="true"
                                   android:elevation="60dp">

    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent"
            >

        <ImageView android:layout_width="80dp" android:layout_height="80dp"
                   android:layout_marginLeft="20dp"
                   android:layout_marginRight="10dp"
                   android:scaleType="fitXY"
                   android:id="@+id/repoImage"
                />
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="Reponame"
                  android:layout_toRightOf="@id/repoImage"
                  android:layout_marginLeft="12dp"
                  android:layout_marginTop="20dp"
                  android:textAppearance="@style/TextAppearance.AppCompat.Large"
                  android:textStyle="bold"
                  android:id="@+id/repoName"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="GithubLink"
                  android:layout_toRightOf="@id/repoImage"
                  android:layout_marginLeft="12dp"
                  android:layout_below="@id/repoName"
                  android:layout_marginTop="20dp"
                  android:textAppearance="@style/TextAppearance.AppCompat.Large"
                  android:textStyle="italic"
                  android:textSize="10sp"
                  android:id="@+id/githublink"/>

        <ImageButton

                android:id="@+id/repoDetails"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@android:drawable/ic_menu_info_details"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="25dp"/>


    </RelativeLayout>

</androidx.cardview.widget.CardView>