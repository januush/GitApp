<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                   android:orientation="vertical"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:layout_marginTop="10dp"
                                   android:layout_marginEnd="10dp"
                                   android:clickable="true"
                                   android:focusable="true"
                                   android:elevation="60dp">

    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">

        <ImageView android:layout_width="80dp" android:layout_height="80dp"
                   android:layout_marginStart="20dp"
                   android:layout_marginEnd="10dp"
                   android:scaleType="fitXY"
                   android:id="@+id/repoImage"/>

        <TextView
                android:layout_marginStart="20dp"
                android:id="@+id/owner"
                android:text="@string/owner"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:layout_below="@id/repoImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:layout_marginStart="20dp"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="normal"
                android:layout_marginTop="5dp"
                android:layout_below="@id/owner"
                android:id="@+id/ownerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="@string/reponame"
                  android:layout_toEndOf="@id/repoImage"
                  android:layout_marginStart="12dp"
                  android:layout_marginTop="20dp"
                  android:textAppearance="@style/TextAppearance.AppCompat.Large"
                  android:textStyle="bold"
                  android:id="@+id/repoName"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="@string/git_link"
                  android:layout_toEndOf="@id/repoImage"
                  android:layout_marginStart="12dp"
                  android:layout_below="@id/repoName"
                  android:layout_marginTop="20dp"
                  android:textAppearance="@style/TextAppearance.AppCompat.Large"
                  android:textStyle="italic"
                  android:textSize="12sp"
                  android:id="@+id/githublink"/>
        <TextView
                android:layout_marginStart="20dp"
                android:id="@+id/descText"
                android:text="@string/repo_text"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:layout_below="@id/ownerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:layout_marginStart="20dp"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="normal"
                android:layout_marginTop="5dp"
                android:layout_below="@id/descText"
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        <TextView
                android:layout_marginStart="20dp"
                android:id="@+id/typeText"
                android:text="@string/type_text"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:layout_below="@id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:layout_marginStart="20dp"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="normal"
                android:layout_marginTop="5dp"
                android:layout_below="@id/typeText"
                android:id="@+id/isPrivate"
                android:layout_marginBottom="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>